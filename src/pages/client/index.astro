---
import Layout from '@/layouts/Layout.astro';

interface PageFrontmatter {
  url: string;
  title: string;
}

const pages = await Astro.glob<PageFrontmatter>('./*/index.astro');
export const title = 'DOM';
---

<Layout title={title}>
  <h1>{title}</h1>
  <ul>
    {
      pages.map((page) => (
        <li>
          <a href={page.url}>{page.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
