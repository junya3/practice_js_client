---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 14;
export const id = 'scrollTopLeft';
const code = `// 現在位置を取得
console.log(element.scrollTop);
// スクロール量を設定・移動
element.scrollTop = 100;`;
---

<Card id={id}>
  <h2>element.scrollTop / Left</h2>
  <p>要素内のスクロール量を所得・設定する</p>
  <Code code={code} />
  <button>TOPから100pxに移動する</button>
  <output></output>
</Card>

<script>
  const root = document.getElementById('scrollTopLeft');
  if (root) {
    const button = root.querySelector('button');
    const output = root.querySelector('output');

    if (button && output) {
      function checkScroll() {
        if (!output) return;
        let scrollY = document.documentElement.scrollTop;
        output.textContent = `TOP: ${scrollY}px`;
      }
      window.addEventListener('scroll', () => {
        checkScroll();
      });

      button.addEventListener('click', () => {
        document.documentElement.scrollTop = 100;
      });
    }
  }
</script>
