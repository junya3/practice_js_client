---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 16;
export const id = 'lastModified';
const code = `console.log(document.lastModified);`;
---

<Card id={id}>
  <h2>document.{id}について</h2>
  <p>現在のページの最終更新日時を取得する</p>
  <Code code={code} />
  <button type='button'>取得する</button>
  <output></output>
</Card>

<script>
  const root = document.getElementById('lastModified');
  if (root) {
    const button = root.querySelector('button');
    const output = root.querySelector('output');
    if (button && output) {
      button.addEventListener('click', () => {
        output.textContent = document.lastModified;
      });
    }
  }
</script>
