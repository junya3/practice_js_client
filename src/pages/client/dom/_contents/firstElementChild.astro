---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 3;
export const id = 'firstElementChild';
const code = `const root = document.getElementById('firstElementChild');
if (root) {
  const button = root.querySelector('button');
  const output = root.querySelector('output');
  if (button && output) {
    button.addEventListener('click', () => {
      output.textContent = String(root.firstElementChild?.textContent);
    });
  }
}`;
---

<Card id={id}>
  <h2>element.{id}()について</h2>
  <p>
    要素内の一番初めに来る要素を取得することができる。なければnullを出力します。
  </p>

  <Code code={code} />
  <button type='button'>このカード内の最初の要素を取得する</button>
  <output></output>
</Card>

<script>
  const root = document.getElementById('firstElementChild');
  if (root) {
    const button = root.querySelector('button');
    const output = root.querySelector('output');
    if (button && output) {
      button.addEventListener('click', () => {
        output.textContent = String(root.firstElementChild?.textContent);
      });
    }
  }
</script>
