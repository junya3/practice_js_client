---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 12;
export const id = 'parentElement';
const code = `const root = document.getElementById('parentElement');
console.log(root.parentElement.className);`;
---

<Card id={id}>
  <h2>element.parentElementについて</h2>
  <p>要素の親要素を取得する</p>
  <Code code={code} />
  <button type='button'>カードの親を取得</button>
  <output></output>
</Card>

<script>
  const root = document.getElementById('parentElement');
  if (root) {
    const button = root.querySelector('button');
    const output = root.querySelector('output');
    if (button && output) {
      button.addEventListener('click', () => {
        output.textContent = String(root.parentElement?.className);
      });
    }
  }
</script>
