---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 6;
const id = 'nextElementSibling';
const code = ``;
---

<Card id={id}>
  <h2>element.{id}</h2>
  <p>要素の直後にある要素を取得します。ない場合はnullが出力されます。</p>
  <Code code={code} />
  <button type='button'>直後の要素を取得する</button>
  <output></output>
</Card>

<script>
  const root = document.getElementById('nextElementSibling');
  if (root) {
    const button = root.querySelector('button');
    const output = root.querySelector('output');
    if (button && output) {
      button.addEventListener('click', () => {
        output.textContent = String(button.nextElementSibling?.tagName);
      });
    }
  }
</script>
