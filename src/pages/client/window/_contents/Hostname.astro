---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 5;
export const id = 'hostname';
const code = `console.log(location.hostname);
location.hostname = 'google.com';`;
---

<Card id={id}>
  <h2>location.hostname</h2>
  <p>URLのホスト名を取得・設定する</p>
  <Code code={code} />
  <button type='button'>ホスト名を取得する</button>
  <output></output>
</Card>

<script>
  const root = document.getElementById('hostname');
  if (root) {
    const button = root.querySelector('button');
    const output = root.querySelector('output');
    if (button && output) {
      button.addEventListener('click', () => {
        output.textContent = location.hostname;
      });
    }
  }
</script>
