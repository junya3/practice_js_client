---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 4;
export const id = 'assign';
const code = `location.assign('URL');`;
---

<Card id={id}>
  <h2>location.assign()について</h2>
  <p>特定のURLへ移動する</p>
  <Code code={code} />
  <button type='button'>google.comへ遷移する</button>
</Card>

<script>
  const root = document.getElementById('assign');
  if (root) {
    const button = root.querySelector('button');
    if (button) {
      const assignURL = 'https://google.com';
      button.addEventListener('click', () => location.assign(assignURL));
    }
  }
</script>
