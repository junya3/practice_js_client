---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 3;
export const id = 'outerWidthHeight';
const code = `console.log(window.outerWidth);`;
---

<Card id={id}>
  <h2>window.outerWidth / Heightについて</h2>
  <p>ブラウザの外側の幅・高さを取得する</p>
  <Code code={code} />
  <output></output>
</Card>

<script>
  const root = document.getElementById('outerWidthHeight');
  if (root) {
    const output = root.querySelector('output') as HTMLOutputElement | null;
    if (output) {
      function checkSize(el: HTMLOutputElement) {
        el.textContent = [
          'ウィンドウサイズ',
          `幅：${window.outerWidth}px`,
          `高さ：${window.outerHeight}px`,
        ].join('\n');
      }
      window.addEventListener('resize', () => {
        checkSize(output);
      });
      checkSize(output);
    }
  }
</script>
