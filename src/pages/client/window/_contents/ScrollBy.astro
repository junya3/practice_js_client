---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 15;
export const id = 'scrollBy';
const code = `window.scrollBy(0, -window.innerHeight);`;
---

<Card id={id}>
  <h2>window.scrollBy()について</h2>
  <p>現在の位置から指定した量だけスクロールする。</p>
  <Code code={code} />
  <button type='button'>現在のブラウザの高さ分だけ上に行きます</button>
</Card>

<script>
  const root = document.getElementById('scrollBy');
  if (root) {
    const button = root.querySelector('button');
    if (button) {
      button.addEventListener('click', () => {
        window.scrollBy(0, -window.innerHeight);
      });
    }
  }
</script>
