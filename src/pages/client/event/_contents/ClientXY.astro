---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 11;
export const id = 'clientXY';
const code = `window.addEventListener('mousemove', (e) => {
  console.log(e.clientX, e.clientY);
})`;
---

<Card id={id}>
  <h2>e.clientX / Yについて</h2>
  <p>イベントが発生した座標を「画面基準」で取得する</p>
  <Code code={code} />
  <button type='button'>取得する</button>
  <output></output>
</Card>

<script>
  const root = document.getElementById('clientXY');
  if (root) {
    const button = root.querySelector('button');
    const output = root.querySelector('output');
    if (button && output) {
      button.addEventListener('click', (e) => {
        output.textContent = [
          `X座標: ${e.clientX}px`,
          `Y座標: ${e.clientY}px`,
        ].join('\n');
      });
    }
  }
</script>
