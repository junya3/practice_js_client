---
import Card from '@/components/common/Card.astro';
import Code from '@/components/common/Code.astro';

export const contentOrder = 4;
export const id = 'currentTarget';
const code = `element.addEventListener('click', (e) => {
  console.log(e.currentTarget);
});`;
---

<Card id={id}>
  <h2>e.currentTargetについて</h2>
  <p>イベントリスナを登録した要素を取得する</p>
  <Code code={code} />
  <button type='button'>取得する</button>
  <output></output>
</Card>

<script>
  const root = document.getElementById('currentTarget');
  if (root) {
    const button = root.querySelector('button');
    const output = root.querySelector('output');
    if (button && output) {
      button.addEventListener('click', (e) => {
        const element = e.currentTarget as HTMLElement;
        output.textContent = element.tagName.toLowerCase();
      });
    }
  }
</script>
