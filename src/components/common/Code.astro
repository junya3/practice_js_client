---
interface Props {
  code: string;
  language?: string;
}
const { code, language = 'JavaScript' } = Astro.props as Props;
---

<pre
  class='code'
  style={`--code-lang: '${language}'`}><code class="code__inner">{code}</code></pre>

<style lang='scss'>
  @use '@assets/style/foundation' as *;
  .code {
    display: grid;
    padding: 1rem;
    border-radius: 0.25rem;
    border: 1px solid mix-transparent(black, 5);
    background: mix-transparent(black, 5);
    color: mix-transparent(black, 65);
    white-space: pre-wrap;
    &::before {
      content: '//- ' var(--code-lang);
    }
  }
</style>
